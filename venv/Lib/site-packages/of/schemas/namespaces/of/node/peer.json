
{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Settings node for an a Optimal Framework peer",
  "title": "A peer",
  "type": "object",
  "version": "0.1",
  "allOf": [
    {
      "properties": {
        "$ref": "ref://of.node.node#/properties"
      }
    },
    {
      "properties": {
        "$ref": "ref://of.peer#/properties"
      }
    }
  ],
  "required": [
    "name",
    "createdWhen",
    "schemaRef",
    "canRead",
    "canWrite",
    "address"
  ],
  "collection": "node"
}
